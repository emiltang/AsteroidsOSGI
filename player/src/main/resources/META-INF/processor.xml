<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" 
               name="dk.sdu.mmmi.cbse.player.PlayerProcessor">
    <implementation class="dk.sdu.mmmi.cbse.player.PlayerProcessor"/>
    <service>
        <provide interface="dk.sdu.mmmi.cbse.api.IProcessor"/>
    </service>     
    
    <reference bind="setWorld" 
               cardinality="0..1"
               interface="dk.sdu.mmmi.cbse.api.IWorld"
               name="IWorld" 
               policy="dynamic" 
               unbind="removeWorld"/>

    <reference bind="setInputService" 
               cardinality="0..1"
               interface="dk.sdu.mmmi.cbse.api.IInputService"
               name="IInputService" 
               policy="dynamic" 
               unbind="removeInputService"/>

</scr:component>