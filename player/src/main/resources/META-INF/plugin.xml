<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" 
               name="dk.sdu.mmmi.cbse.player.PlayerPlugin">
    <implementation class="dk.sdu.mmmi.cbse.player.PlayerPlugin"/>
    <service>
        <provide interface="dk.sdu.mmmi.cbse.api.IPlugin"/>
    </service>     
    
    <reference bind="setWorld" 
               cardinality="0..1"
               interface="dk.sdu.mmmi.cbse.api.IWorld"
               name="IWorld" 
               policy="dynamic" 
               unbind="removeWorld"/>

    <reference bind="setAssetManager" 
               cardinality="0..1"
               interface="dk.sdu.mmmi.cbse.api.IAssetManager"
               name="IAssetManager" 
               policy="dynamic" 
               unbind="removeAssetManager"/>

</scr:component>